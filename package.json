{
  "name": "telegram-ai-assistant",
  "version": "1.0.0",
  "description": "AI Assistant Telegram Bot using LangGraph and Ollama",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build:ollama": "docker compose -f ./docker-compose-ollama.yml build",
    "build:cloud": "docker compose -f ./docker-compose-cloud.yml build",
    "start:ollama": "docker compose -f ./docker-compose-ollama.yml up -d",
    "start:cloud": "docker compose -f ./docker-compose-cloud.yml up -d"
  },
  "dependencies": {
    "@langchain/community": "^0.3.18",
    "@langchain/core": "^0.3.23",
    "@langchain/google-genai": "^0.1.5",
    "@langchain/groq": "^0.1.2",
    "@langchain/langgraph": "^0.2.33",
    "@langchain/ollama": "^0.1.3",
    "@langchain/openai": "^0.3.14",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "ioredis": "^5.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/node-telegram-bot-api": "^0.64.1",
    "tsx": "^4.19.2"
  }
}